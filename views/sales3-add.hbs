<div class="container">
    {{#if message}}
    <div class="alert alert-{{message.type}}" role="alert">
        {{message.text}}
    </div>
    {{/if}}

    <div class="row">
        <div class="col-lg-6">
            <form method="post">
                <div class="form-group">
                    <label for="sales_id">Sales id</label>
                    <input type="text" class="form-control" id="sales_id" name="sales_id" value="{{body.sales_id}}">
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{body.name}}">
                </div>
                <div class="form-group">
                    <label for="birthday">Birthday</label>
                    <input type="text" class="form-control" id="birthday" name="birthday" value="{{body.birthday}}">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>


        </div>
    </div>
</div>





